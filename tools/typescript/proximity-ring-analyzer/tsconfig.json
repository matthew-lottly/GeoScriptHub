{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "jimu-core": ["./typings/jimu-core"],
      "jimu-arcgis": ["./typings/jimu-arcgis"],
      "jimu-ui": ["./typings/jimu-ui"],
      "jimu-ui/advanced/setting-components": ["./typings/jimu-ui-advanced"],
      "@arcgis/core/*": ["./typings/arcgis-core"]
    }
  },
  "include": ["src/**/*", "config.ts", "typings/**/*"],
  "exclude": ["node_modules"]
}
